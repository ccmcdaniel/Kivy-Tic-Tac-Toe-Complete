#:kivy 1.0
#:import hex kivy.utils.get_color_from_hex

<MainMenuScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: 20
        spacing: 30

        Label:
            text: 'Tic Tac Toe'
            font_size: '40sp'
            size_hint: (1, 0.5)

        MainMenuButton:
            text: 'New Game'
            on_press: root.on_click_start_game()

        MainMenuButton:
            text: 'Quit'
            bg_color_normal: hex("#E32020")
            bg_color_pressed: hex("#e28f8fff")


        # empty space
        BoxLayout:
            orientation: 'vertical'


