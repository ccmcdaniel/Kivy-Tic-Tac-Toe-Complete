#:kivy 1.0
#:import hex kivy.utils.get_color_from_hex

<CoinTossScreen>:
    btnHeads: heads
    btnTails: tails

    BoxLayout:
        orientation: 'vertical'
        padding: 20
        spacing: 30

        Label:
            text: 'Coin Toss!'
            font_size: '40sp'
            size_hint: (1, 0.5)

        Label:
            text: f'{root.player1_name}, select Heads or Tails'
            font_size: '25sp'
            size_hint: (1, 0.5)

        BoxLayout:
            orientation: 'horizontal'
            spacing: 20

            CoinIcon:
                id: heads
                text: 'Heads'
                group: 'coin'
                size_hint: (0.7, None)

            CoinIcon:
                id: tails
                text: "Tails"
                group: 'coin'
                size_hint: (0.7, None)

        MainMenuButton:
            text: 'Toss Coin'
            on_press: root.on_click_confirm_selection()


        # empty space
        BoxLayout:
            orientation: 'vertical'
