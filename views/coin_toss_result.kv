#:kivy 1.0
#:import hex kivy.utils.get_color_from_hex

<CoinTossResultScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: 20
        spacing: 30

        Label:
            text: 'Coin Toss Result'
            font_size: '40sp'
            size_hint: (1, 0.5)

        CoinIcon:
            text: root.face_up_name
            group: 'coin'
            size_hint: (0.5, None)

            pos_hint: {'center_x': 0.5, 'center_y': 0.5}

        Label:
            text: f'{root.winning_player_name} wins the coin toss!'
            font_size: '40sp'
            size_hint: (1, None)
            text_size: self.width, None
            height: self.texture_size[1]
            halign: 'center'
            valign: 'middle'
            height: '150sp'

        MainMenuButton:
            text: 'Start Game'
            on_press: root.click_start_game()

        # empty space
        BoxLayout:
            orientation: 'vertical'
