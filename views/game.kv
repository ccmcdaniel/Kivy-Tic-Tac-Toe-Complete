#:kivy 1.0
#:import hex kivy.utils.get_color_from_hex

<GameScreen>:
    tile_0_0: board_tile_0_0
    tile_0_1: board_tile_0_1
    tile_0_2: board_tile_0_2

    tile_1_0: board_tile_1_0
    tile_1_1: board_tile_1_1
    tile_1_2: board_tile_1_2

    tile_2_0: board_tile_2_0
    tile_2_1: board_tile_2_1
    tile_2_2: board_tile_2_2
    
    BoxLayout:
        orientation: 'vertical'
        spacing: 40

        BoxLayout:
            orientation: 'horizontal'
            size_hint: (1, 0.10)

            PlayerScoreHUD:
                name: f'{root.player1_name} (x)'
                score: root.player1_score
                bg_color: hex("#FBB6B6")
                size_hint: (0.25, 1)
                bottom_left: 0
                bottom_right: 20

            Label:
                text: f"{root.active_player_name}\'s turn"
                font_size: '30sp'
                size_hint: (0.5, 1)

            PlayerScoreHUD:
                name: f'{root.player2_name} (o)'
                score: root.player2_score
                bg_color: hex("#B6C0FB")
                size_hint: (0.25, 1)
                bottom_left: 20
                bottom_right: 0

        BoxLayout:
            size_hint: (1, 0.6)
            
            GridLayout:
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                rows: 3
                cols: 3
                spacing: 10
                padding: 20

                BoardTile:
                    id: board_tile_0_0
                    tile_row: 0
                    tile_col: 0
                    on_press: root.on_press_tile(self)
                BoardTile:
                    id: board_tile_0_1
                    tile_row: 0
                    tile_col: 1
                    on_press: root.on_press_tile(self)
                BoardTile:
                    id: board_tile_0_2
                    tile_row: 0
                    tile_col: 2
                    on_press: root.on_press_tile(self)

                BoardTile:
                    id: board_tile_1_0
                    tile_row: 1
                    tile_col: 0
                    on_press: root.on_press_tile(self)
                BoardTile:
                    id: board_tile_1_1
                    tile_row: 1
                    tile_col: 1
                    on_press: root.on_press_tile(self)
                BoardTile:
                    id: board_tile_1_2
                    tile_row: 1
                    tile_col: 2
                    on_press: root.on_press_tile(self)

                BoardTile:
                    id: board_tile_2_0
                    tile_row: 2
                    tile_col: 0
                    on_press: root.on_press_tile(self)
                BoardTile:
                    id: board_tile_2_1
                    tile_row: 2
                    tile_col: 1
                    on_press: root.on_press_tile(self)
                BoardTile:
                    id: board_tile_2_2
                    tile_row: 2
                    tile_col: 2
                    on_press: root.on_press_tile(self)



