#:kivy 1.0
#:import hex kivy.utils.get_color_from_hex

<GameResultScreen>:
    BoxLayout:
        orientation: 'vertical'
        spacing: 40

        Label:
            text: root.winner_name
            font_size: '30sp'     
            text_size: self.width, None
            height: self.texture_size[1]
            halign: 'center'
            valign: 'middle'

        BoxLayout:
            orientation: 'horizontal'
            spacing: 60
            padding: 20
            size_hint: (1, None)
            height: 150

            PlayerScoreHUD:
                name: root.player1_name
                score: root.player1_score
                size_hint: (0.25, 1)
                bottom_left: 20
                bottom_right: 20
                top_left: 20
                top_right: 20


            PlayerScoreHUD:
                name: root.player2_name
                score: root.player2_score
                bg_color: hex("#B6C0FB")
                size_hint: (0.25, 1)
                bottom_left: 20
                bottom_right: 20
                top_left: 20
                top_right: 20

        BoxLayout:
            orientation: 'vertical'
            padding: 20
            spacing: 20
            size_hint: (1, None)
            height: 210

            MainMenuButton:
                text: 'New Game'
                on_press: root.on_clicked_new_game()

            MainMenuButton:
                text: 'Main Menu'
                bg_color_normal: hex("#E32020")
                bg_color_pressed: hex("#e28f8fff")

                on_press: app.root.current = 'main_menu'